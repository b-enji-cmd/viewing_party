
<h1><%= @movie.title %></h1>

<%= link_to "Create Viewing Party for Movie", viewing_parties_new_path %><br>

<section id="movie-details">
  <p>Vote Average: <%= @movie.vote_average %></p>
  <p>Runtime: <%= @movie.runtime %></p>
  <p>Genre(s): </p>
    <ul>
      <% if @movie.genres.nil? %>
        <p>No genres listed.</p>
      <% else %>
        <% @movie.genres.each do |genre| %>
          <li><%= genre %></li>
        <% end %>
      <% end %>
    </ul>
</section><hr>

<section id="movie-summary">
  <p>Summary:<br><br> <%= @movie.summary %></p>
</section><hr>

<section id="recommendations">
  <p>Other movies you may enjoy:</p>
  <ul>
    <% if @movie.recommendations.nil? %>
      <p>No recommendations found.</p>
    <% else %>
      <% @movie.recommendations.each do |recommendation| %>
        <li><%= recommendation %></li>
      <% end %>
    <% end %>
  </ul>
</section><hr>
